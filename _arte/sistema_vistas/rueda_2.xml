      <path>./_arte/bgv-sistemas/${system.theme}.mp4</path>
	  <pos>0.38 0.12</pos>
	  <size>0.52 0.68</size>
      <maxSize>0.525 0.685</maxSize>
      <origin>0 0</origin>
      <delay>0.5</delay>
	  <effect>none</effect>
