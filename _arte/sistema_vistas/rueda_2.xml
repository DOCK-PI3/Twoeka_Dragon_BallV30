    </carousel>
    <image name="background" extra="true">
      <tile>false</tile>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <path>./_arte/bg-DBZ/${system.theme}.jpg</path>
	  <color>cccccc</color>
	  <zIndex>10</zIndex>
    </image> 
    <video name="video_sys" extra="true">
