<theme>
  <formatVersion>7</formatVersion>   
  <view name="system">
	<carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical_wheel</type> <!-- tipos de carousel , horizontal_wheel ,vertical y horizontal-->
        <pos>-0.356 -0.0051</pos> <!-- posicion del carousel -->
        <size>1 0.917</size> <!-- tamaño del carousel -->
        <logoScale>1.4</logoScale> <!-- escalado del logo seleccionado -->
        <logoSize>0.22 0.15</logoSize> <!-- tamaño de los logos -->
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
        <logoRotation>12.15</logoRotation> <!-- espacio en angulos entre logos, a mas grados mas se separan entre si -->
		<logoRotationOrigin>-2.0 0.2</logoRotationOrigin> <!-- origen de la rotacion, curva del carousel ,entre menor es el numero mayor es la curva -->
